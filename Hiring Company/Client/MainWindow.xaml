<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        xmlns:userControls="clr-namespace:Common.UserControls;assembly=Common"
        xmlns:viewModel ="clr-namespace:Client.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="600">
    <Window.DataContext>
        <viewModel:MainWindowViewModel x:Name="viewModel" />
    </Window.DataContext>
    <DockPanel>
        
        <!-- Toolbar -->
        <DockPanel DockPanel.Dock="Top">
            <TextBlock Margin="10" HorizontalAlignment="Right">
                <Hyperlink> Ime Imenic </Hyperlink>
            </TextBlock>
            <Button Margin="10"  HorizontalAlignment="Right">Log out</Button>
        </DockPanel>
        
        <!-- Login -->
        <Grid Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <userControls:LoginView Width="200" Height="200" Grid.Column="0" LoginCommand="{Binding ElementName=viewModel,Path=LoginCommand}"/>
            <userControls:CreateProjectView Grid.Column="1"/>
        </Grid>
        
    </DockPanel>
</Window>
